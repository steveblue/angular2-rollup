{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": false,
    "allowUnreachableCode": false,
    "moduleResolution": "node",
    "outDir": "./dist",
    "typeRoots": [ "node_modules/@types" ],
    "types": [
      "node",
      "core-js",
      "jasmine",
      "requirejs",
      "karma"
    ]
  },
  "exclude": [
    "dist",
    "tmp",
    "node_modules",
    "main.prod.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
